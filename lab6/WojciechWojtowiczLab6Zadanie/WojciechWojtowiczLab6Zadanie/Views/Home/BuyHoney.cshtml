
@{
    ViewData["Title"] = "BuyHoney";
}

@model ClientFormModel
@{
    ViewBag.Title = "Exercise5";
}
<!--Formularz kontaktowy-->
@using (Html.BeginForm("BuyHoney", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <br />
    <br />

    <h4>@TempData["Order"]</h4>
    <hr />
    <!--Imię-->
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <!--Nazwisko-->
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <!--Opis-->
    <div class="form-group">
        @Html.LabelFor(model => model.Order, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Zamów" class="btn btn-success" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Powrót do listy miodów", "HoneyPage")
</div>
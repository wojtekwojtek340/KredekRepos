@{
    ViewData["Title"] = "Home Page";
}

<html>


<head>
    <!--załadowanie stylu-->
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <!--ruchoma galeria zdjec-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
        <h3>Najlepsze lokalne wyroby!</h3>
        <!--kółeczka wskazujące aktualne zdjecie-->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <!--pierwsze zdjecie-->
            <div class="item active">
                <img src="~/images/miod.png" alt="Miód" class="img-responsive" width="1200" />
                <div class="carousel-caption" role="option">
                    <p>
                        <h1>Najlepszy miód w okolicy, sprawdź naszą ofertę!</h1>
                        <a class="btn btn-default" @Html.ActionLink("Sprawdź", "HoneyPage", "Home")
                        </a>
                    </p>
                </div>
            </div>
            <!--drugie zdjęcie-->
            <div class="item">
                <img src="~/images/mleko.jpg" alt="Mleko" class="img-responsive" width="1200" />
                <div class="carousel-caption" role="option">
                    <p>
                        <h1>Mleko prosto od krowy, atrakcyjne ceny!</h1>
                        <a class="btn btn-default" @Html.ActionLink("Sprawdź", "MilkPage", "Home")
                        </a>
                    </p>
                </div>
            </div>
            <!--trzecie zdjęcie-->
            <div class="item">
                <img src="~/images/sery.jpg" alt="Sery" class="img-responsive" width="1200" />
                <div class="carousel-caption" role="option">
                    <p>
                        <h1>Różne gatunki serów, każdy znajdzie coś dla siebie!</h1>
                        <a class="btn btn-default" @Html.ActionLink("Sprawdź", "CheesePage", "Home")
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <!--ręczna zmiana zdjęcia-->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <!--ręczna zmiana zdjęcia-->
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</body>
</html>

